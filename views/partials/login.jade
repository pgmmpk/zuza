.row
	.col-md-4.col-md-offset-4

		h2 {{'Login' | translate}}
		form.form
			.form-group
				input.form-control(type='text', pattern='*', autofocus=true, ng-model="user.username", required, placeholder="{{'Username' | translate}}", id='username')

			.form-group
				input.form-control(type='password', ng-model="user.password", required, placeholder="{{'Password' | translate}}")

			.form-group
				button.btn.btn-default(ng-click="submit()") {{'Login' | translate}}
		
			.form-group
				.error {{error | translate}}
